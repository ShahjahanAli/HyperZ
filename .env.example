# ──────────────────────────────────────────
# HyperZ Framework — Environment Configuration
# ──────────────────────────────────────────

# Application
APP_NAME=HyperZ
APP_ENV=development
APP_PORT=3000
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:3000

# Database (SQL — Knex)
DB_DRIVER=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=hyperz
DB_USER=root
DB_PASSWORD=

# Database (MongoDB — Mongoose)
MONGO_ENABLED=false
MONGO_URI=mongodb://127.0.0.1:27017/hyperz

# Authentication
JWT_SECRET=your-secret-key
JWT_EXPIRATION=7d

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM_NAME=HyperZ
MAIL_FROM_ADDRESS=noreply@hyperz.dev

# Cache
CACHE_DRIVER=memory

# Queue
QUEUE_DRIVER=sync

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=console
