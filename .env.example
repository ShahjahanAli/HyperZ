# Application
APP_NAME=HyperZ
APP_ENV=development
APP_PORT=7700
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:7700

# Database (SQL — Knex)
DB_DRIVER=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=hyperz
DB_USER=root
DB_PASSWORD=

# Database (MongoDB — Mongoose)
MONGO_ENABLED=false
MONGO_URI=mongodb://127.0.0.1:27017/hyperz

# Authentication
JWT_SECRET=your-secret-key
JWT_EXPIRATION=7d

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
