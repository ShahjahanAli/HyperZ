# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM_NAME=HyperZ
MAIL_FROM_ADDRESS=noreply@hyperz.dev

# Cache
CACHE_DRIVER=memory

# Queue
QUEUE_DRIVER=sync

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=console

# AI Gateway
